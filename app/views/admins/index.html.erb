
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Starter Template for Bootstrap</title>
  </head>

  <body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Project name</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li id="products" class="active"><a>products</a></li>
            <li id="customers"><a>customers</a></li>
            <li id="orders"><a>orders</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <br/>
    <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <div class="container">
      <div id="products_show">
        <br/><br/><br/>
        <button class="btn btn-success" id="addproduct">Add new product</button><br/><br/>
        <div id="selections">
        <%= form_for :admins do |f| %>
             <p>
             <%= f.label :category %><br>
             <%= f.text_field :cat_name %>
            </p>
             <p>
             <%= f.label :brand %><br>
             <%= f.text_field :br_name %>
            </p>
             <p>
            <%= f.label :product_name %><br>
            <%= f.text_field :pro_name %>
            </p>
             <p>
            <%= f.label :product_price%><br>
            <%= f.text_field :pro_price %>
            </p>
            <p>
            <%= f.label :Product_feautures%><br>
            <%= f.text_area :pro_feature%>
            </p>
             <p>
            <%= f.label :Number_of_Products_Available%><br>
            <%= f.text_field :pro_avilability %>
            </p>
             <p>
            <%= f.label :location_of_image%><br>
            <%= f.text_field :pro_image %>
            </p>
          <p>
            <%= f.submit %>
             </p>
        <% end %>
     </div>
       <div class="row">
          <div class="col-md-2">Product Id</div>
          <div class="col-md-3">Product Name</div>
          <div class="col-md-2">Remaining No. of product</div>
          <div class="col-md-2">Number of product Sold</div>
         </div>
      </div>
      <div id="customers_show">
        <br/><br/><br/>
        <div class="col-md-2">Customer Id</div>
          <div class="col-md-3">Customer Name</div>
          <div class="col-md-2">customer Email Id</div>
          <div class="col-md-2">Customer Phone No.</div>
          <div class="col-md-1">Number of Product purchsed</div>
      </div>
      <div id="orders_show">
           <br/><br/><br/>
          <div class="col-md-2">Order No.</div>
          <div class="col-md-2">Customer Id</div>
          <div class="col-md-2">Customer Name</div>
          <div class="col-md-2">Customer Phone No.</div>
          <div class="col-md-1">Number of Product purchsed</div>
          <div class="col-md-1">order Status</div>
        </div>
    </div>
  </body>
</html>
