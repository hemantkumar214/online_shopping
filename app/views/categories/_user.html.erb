<html>
<head></head>
<body>
<div class="container" style="margin-top: 75px;">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="" style="background-color: #424242; height: 40px; margin-top: 20px;">
        <h2 class="header" style="background-color: #424242; height: 38px;">
          <span style="text-transform: uppercase; font-size: 16px; color: #ffffff; margin-left: 10px;">Listing Categories</span></h2>
      </div>
      <% 
      <div class="row">
      	<div class="col-md-2">Nokia</div>
      	</div>
      	 <div class="row">
      	<div class="col-md-2">Samsung</div>
      	</div>
      	 <div class="row">
      	<div class="col-md-2">Micromax</div>
      	</div>
      	 <div class="row">
      	<div class="col-md-2">HTC</div>
      	</div>

      <table>
        <thead>
          <tr>
            <th>Category</th>
            <th>Parent Category</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= get_parent_name(category.parent_id) %></td>
              <td><%= link_to 'Show', category, :class=>"mrg_left" %></td>
              <td><%= link_to 'Edit', edit_category_path(category), :class=>"mrg_left" %></td>
              <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"mrg_left" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Category', new_category_path %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>





























</html>