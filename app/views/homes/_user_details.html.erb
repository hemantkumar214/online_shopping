<!-- This page will display users details -->
<div class="container" style="margin-top: 75px;">
  <div class="row">
    <div class="col-md-12">
      <div class="" style="background-color: #424242; height: 40px; margin-top: 20px;">
        <h2 class="header" style="background-color: #424242; height: 38px;">
          <span style="text-transform: uppercase; font-size: 16px; color: #ffffff; margin-left: 10px;">Listing User Details</span>
          <span style="font-size: 14px; color: #ffffff; margin-right: 10px; float: right; margin-top: 12px;"></span>
        </h2>
      </div>

      <!-- This table code is showing User details records -->
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Id</th>
            <th>EmailId</th>
            <th>phone No</th>
            <th>Address</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @user_details.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.id %></td>
              <td><%= user.email %> </td>
              <td><%= user.phone_no %> </td>
              <td><% user.addresses.each do |address| %>
                <%= address.address  %>
                <%= address.landmark  %>
                <%= address.city  %>
                <%= address.state  %>
                <%= address.country  %>
                <%= address.pincode  %>
                <br>
                <% end -%>
              </td>
             </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
