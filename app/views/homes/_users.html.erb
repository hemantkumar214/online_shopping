        </div>
      </div>
		</div>
		<div class="col-md-4" style="margin-top: 13px;">
			<a href="#">
				<img id="iCartLogo" style="height: 350px;" src="/assets/nexus5.jpg" class="img-responsive" alt="Responsive image" />
			</a>
		</div>
	</div>

	<div class="row">
		<div class="col-md-8" style="margin-top: 13px;">
			<!-- It will display Parent Categories which parent is nil -->
      <% @categories.each do |category| %>
        <% if category.parent_id==nil %>
			   	<div class="" style="background-color: #424242; height: 40px;">
					  <h2 class="header" style="background-color: #424242; height: 38px;">
						  <span style="text-transform: uppercase; font-size: 16px; color: #ffffff; margin-left: 10px;"><%= category.name %></span>
						  <span style="font-size: 14px; color: #ffffff; margin-right: 10px; float: right; margin-top: 12px;">India's leading electronics megastore</span>
						</h2>
					</div>

					<!-- It will display slides for categories with thier parent categories -->
					<div class="slider4" style="height: 400px; margin-left: 10px;">
						<% @categories.each do |category2| %>
				  		<% if category2.parent_id==category.id %>
								<div class="slide fltLeft" style="height: 190px;">
									<%= link_to(url_for("subcategory/#{category2.name}"),:remote => true) do %>
											<div class="fltLeft">
												<img class="imageSize" src="<%= category2.image %>">
											</div>
											<div class=" labelSize" style="position:relative; top:10px; left:60px;">
												<span class="arrow-right"><b><%= category2.name %></b></span>
											</div>
										<% end %>
								</div>
							<% end %>
						<% end %>
  				</div>
			<% end%>
			<%end %> 
		</div>

			<div class="col-md-4" style="margin-top: 13px;">
			</div>
	</div>
</div>
