<%= form_for @address  do |f| %>
<%= f.label :Address %>
<div class="controls mrg_top">
	<%= f.collection_select :id, User.all, :id, :name, :prompt => "Select Category" %>
	</select>
</div>
<%= f.text_field :address,  :class=> "form-control"%>
<%= f.text_field :landmark,  :class=> "form-control"%>
<%= f.text_field :pincode,  :class=> "form-control"%>
<%= f.text_field :city,  :class=> "form-control"%>
<%= f.text_field :state,  :class=> "form-control"%>
<%= f.text_field :country,  :class=> "form-control"%>
<%= f.submit :class=>"btn btn-primary mrg_top" %>
<% end %>