<div class="modal-body row">
  <div class="col-md-6">
  	<% if user_signed_in?  %>
  	  <h3>Existing Adresses</h3>    
      <% Address.where(:user_id=>current_user.id).to_a.each do |address|  %>
        <%= link_to(bills_create_path(address_id: address.id)) do %>
          <%= address.address %>
      	  <%= address.landmark %><br/>
      		<%= "#{address.city} #{address.state}" %><br/>  		
      		<%= "#{address.country} , #{address.pincode}" %><br/>
        <% end -%>
        <br>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-6">
  	<h3> New Shipping Address</h3>
    <%= form_for @address  do |f| %>
      <%= f.label :Address %>
      <%= f.text_area :address,  :class=> "form-control"%>
      <%= f.label :landmark %>
      <%= f.text_field :landmark,  :class=> "form-control"%>
      <%= f.label :pincode %>
      <%= f.text_field :pincode,  :class=> "form-control"%>
      <%= f.label :city %>
      <%= f.text_field :city,  :class=> "form-control"%>
      <%= f.label :state %>
      <%= f.text_field :state,  :class=> "form-control"%>
      <%= f.label :country %>
      <%= f.text_field :country,  :class=> "form-control"%><br/>
      <%= f.submit :class=>"btn btn-primary mrg_top" %>
    <% end %>
  </div>
</div>







