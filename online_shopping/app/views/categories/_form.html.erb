<%= form_for @category  do |f| %>
<%= f.label :Category %>
<%= f.text_field :name,  :class=> "form-control"%>
<div class="controls mrg_top">
	<%= f.collection_select :parent_id, Category.all, :id, :name, :prompt => "Select Category" %>
	</select>
</div>
<%= f.label :image %>
<%= f.file_field :image%>
<%= f.submit :class=>"btn btn-primary mrg_top" %>
<% end %>