<% if user_signed_in?  && current_user.role_id== 1 %>
  <div class="container" style="margin-top: 75px;">
	 <div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<p id="notice"><%= notice %></p>
			
			<%= @diff_category.each do |category| %>
			<p>
			  <strong>Name:</strong>
			  <%= category.name %>
			</p>
			<p>
			  <strong>Parent Category:</strong>
			  <%= get_parent_name(category.parent_id) %>
			</p>
			<p>
			  <strong>Image:</strong>
			  <%= @category.image %>
			</p>

			<%= link_to 'Edit', edit_category_path(category) %> 
			<%= link_to 'Back', categories_path %>
			<% end %>
		</div>
	</div>
</div>
<%else %>
<div class="container" style="margin-top: 75px;">
	<div class="row">
	   <% @products.order('created_at DESC').each do |product| %>
			 <div class="col-md-2">
			 	<div class="thumbnail">
			      <img src="<%= product.image %>" style="height:50px;width:50px;" alt="product image"/>
			   </div>
			 <div class="caption">
              <h3><%= product.name %></h3>
               <p> <%= product.price %></p>
               <p>  <%= product.description %> </p>
             </div>
         </div>
        <% end %>
     </div>
         </div>
		<div class="col-md-3"></div>
	</div>
</div>
<% end %>