<%= form_for @product_detail  do |f| %>
<%= f.label :Product %>
<div class="controls mrg_top">
	<%= f.collection_select :product_id, Product.all, :id, :name, :prompt => "Select product_detail" %>
	</select>
</div>
<%= f.label :unique_id %>
<%= f.text_field :unique_id,  :class=> "form-control"%>
<%= f.submit :class=>"btn btn-primary mrg_top" %>
<% end %>