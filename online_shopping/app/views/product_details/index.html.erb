<div class="container" style="margin-top: 75px;">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1>Listing Product Details</h1>
      <table>
        <thead>
          <tr>
            <th>Product</th>
            <th>Unique Identity number</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @product_details.each do |product_detail| %>
            <tr>
              <td><%= Product.find(product_detail.product_id).name %></td>
              <td><%= product_detail.unique_id %></td>
              <td><%= link_to 'Show', product_detail, :class=>"mrg_left" %>
              </td>
              <td>
                <%= link_to 'Edit', edit_product_detail_path(product_detail), :class=>"mrg_left" %></td>
              <td><%= link_to 'Destroy', product_detail, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"mrg_left" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New product\'s detail', new_product_detail_path %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
