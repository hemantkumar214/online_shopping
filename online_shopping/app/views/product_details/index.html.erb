<div class="container" style="margin-top: 75px;">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="" style="background-color: #424242; height: 40px; margin-top: 20px;">
        <h2 class="header" style="background-color: #424242; height: 38px;">
          <span style="text-transform: uppercase; font-size: 16px; color: #ffffff; margin-left: 10px;">Listing Product Details</span>
          <span style="font-size: 14px; color: #ffffff; margin-right: 10px; float: right; margin-top: 12px;">Admin will show the Product Details for products</span>
        </h2>
      </div>
      <table>
        <thead>
          <tr>
            <th>Product</th>
            <th>Unique Identity number</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @product_details.each do |product_detail| %>
            <tr>
              <td><%= Product.find(product_detail.product_id).name %></td>
              <td><%= product_detail.unique_id %></td>
              <td><%= link_to 'Show', product_detail, :class=>"mrg_left" %>
              </td>
              <td>
                <%= link_to 'Edit', edit_product_detail_path(product_detail), :class=>"mrg_left" %></td>
              <td><%= link_to 'Destroy', product_detail, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"mrg_left" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New product\'s detail', new_product_detail_path %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
