<div class="container" style="margin-top: 75px;">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1>Listing Address</h1>
      <table>
        <thead>
          <tr>
            <th>Category</th>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= Category.find(product.category_id).name %></td>
              <td><%= product.name %></td>
              <td><%= product.description %></td>
              <td><%= product.price %></td>
              <td><%= product.image %></td>
              <td><%= link_to 'Show', product, :class=>"mrg_left" %></td>
              <td><%= link_to 'Edit', edit_product_path(product), :class=>"mrg_left" %></td>
              <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"mrg_left" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Product', new_product_path %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>

